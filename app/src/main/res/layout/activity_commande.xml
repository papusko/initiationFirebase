<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/com_facebook_button_background_color"
    tools:context=".CommandeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">



    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/chem" />

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:text="Chemise"/>




    <EditText
        android:id="@+id/chemise_prix_repassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:imeActionLabel="Repassage"
        style="@android:style/Widget.EditText"
        android:hint="0"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/chemise_prix_nettoyage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="0 "
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/chemise_prix_teinture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="0 "
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />



    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/pant" />


    <TextView
        android:id="@+id/chemise_tof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:text="Pantalon"/>





    <EditText
        android:id="@+id/pantalon_prix_repassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        style="@android:style/Widget.EditText"
        android:hint="0 "
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/pantalon_prix_nettoyage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="0"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/pantalon_prix_teinture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="0 "
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        android:inputType="date"
        />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/tee" />


    <TextView
        android:id="@+id/tee_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:text="Tee-Shirt"/>





    <EditText
        android:id="@+id/tee_prix_repassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        style="@android:style/Widget.EditText"
        android:hint="0 "
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/tee_prix_nettoyage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="0"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/tee_prix_teinture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="0 "
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        android:inputType="date"
        />
    </LinearLayout>
    <Button
        android:id="@+id/valider_commande"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Valider Commande"
        android:theme="@style/ThemeOverlay.MyDarkButton" />
 </ScrollView>

